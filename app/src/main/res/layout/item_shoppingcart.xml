<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|top"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone"
        android:padding="5dp"
        app:tint="@android:color/holo_red_dark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgGioHang"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_new" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/txtTenSp_GioHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/txtTenGiaSp_GioHang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="15000"
                android:textColor="#FA5252"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:text="Số lượng: "
                    android:textColor="#FA5252"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/imgTru_GioHang"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_minus"/>
                <TextView
                    android:id="@+id/txtSoLuongSP_GioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>
                <ImageView
                    android:id="@+id/imgCong_GioHang"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_plus"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtTenGiaSp2_GioHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="15000"
                android:textSize="20sp"
                android:textColor="#FA5252"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/chkItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_gravity="end|bottom"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>