<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgSP"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtTenSp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imgSua"
            app:layout_constraintStart_toEndOf="@id/imgSP"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtGiaSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 000.000đ"
            android:textColor="#E91E63"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/txtTenSp"
            app:layout_constraintTop_toBottomOf="@id/txtTenSp" />

        <TextView
            android:id="@+id/txtLoaiSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#F0F0F0"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:text="Loại: 1"
            android:textColor="#555555"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/txtTenSp"
            app:layout_constraintTop_toBottomOf="@id/txtGiaSP" />

        <TextView
            android:id="@+id/txtSoLuongTonKho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#FFF3E0"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:text="Số lượng tồn kho: 11"
            android:textColor="#E65100"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtLoaiSP"
            app:layout_constraintStart_toEndOf="@id/txtLoaiSP"
            app:layout_constraintTop_toTopOf="@+id/txtLoaiSP" />

        <TextView
            android:id="@+id/txtMoTa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Mô tả sản phẩm ngắn gọn..."
            android:textColor="#8395a7"
            android:textSize="13sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/txtTenSp"
            app:layout_constraintTop_toBottomOf="@id/txtLoaiSP" />

        <ImageView
            android:id="@+id/imgSua"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/ic_edit_product"
            app:layout_constraintEnd_toStartOf="@+id/imgXoa"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgXoa"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/ic_delete_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#F44336" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>